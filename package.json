{
  "name": "callllm",
  "version": "0.2.3",
  "description": "A universal LLM caller library.",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/esm/index.d.ts"
    },
    "./adapters": {
      "import": "./dist/esm/adapters/index.js",
      "require": "./dist/cjs/adapters/index.cjs",
      "types": "./dist/esm/adapters/index.d.ts"
    },
    "./core": {
      "import": "./dist/esm/core/index.js",
      "require": "./dist/cjs/core/index.cjs",
      "types": "./dist/esm/core/index.d.ts"
    },
    "./interfaces": {
      "import": "./dist/esm/interfaces/UniversalInterfaces.js",
      "require": "./dist/cjs/interfaces/UniversalInterfaces.cjs",
      "types": "./dist/esm/interfaces/UniversalInterfaces.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc && yarn build:cjs",
    "build:cjs": "node scripts/build-cjs.mjs",
    "test": "NODE_OPTIONS=--experimental-vm-modules TS_CONFIG=tsconfig.test.json jest --coverage",
    "prepublishOnly": "yarn clean && yarn build && yarn test",
    "example:simple": "tsx examples/simpleChat.ts",
    "example:dataSplitting": "tsx examples/dataSplitting.ts",
    "example:usage": "tsx examples/usageTracking.ts",
    "example:history": "tsx examples/historyModes.ts",
    "example:json": "tsx examples/jsonOutput.ts",
    "example:tool": "tsx examples/toolCalling.ts",
    "example:toolFolder": "tsx examples/toolFunctionFolder.ts",
    "example:reasoning": "tsx examples/reasoningModels.ts",
    "example:mcp": "tsx examples/mcpClient.ts",
    "example:mcpDirect": "tsx examples/mcpDirectTools.ts",
    "example:historyModes": "tsx examples/historyModes.ts",
    "example:loadHistory": "tsx examples/loadHistory.ts",
    "example:image": "tsx examples/imageInput.ts",
    "example:imageGenerate": "tsx examples/imageGenerationAndEditing.ts",
    "example:embeddings": "tsx examples/embeddings-example.ts",
    "lint": "eslint . --ext .ts"
  },
  "engines": {
    "node": ">=18"
  },
  "author": "A2arium <a2arium@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a2arium/callllm.git"
  },
  "bugs": {
    "url": "https://github.com/a2arium/callllm/issues"
  },
  "homepage": "https://github.com/a2arium/callllm#readme",
  "keywords": [
    "llm",
    "ai",
    "language model",
    "openai",
    "anthropic",
    "gemini",
    "api",
    "caller",
    "universal"
  ],
  "dependencies": {
    "@dqbd/tiktoken": "^1.0.18",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@types/jest": "^29.5.14",
    "@types/sharp": "^0.32.0",
    "dotenv": "^16.4.7",
    "jest": "^29.7.0",
    "jsonrepair": "^3.12.0",
    "openai": "^4.90.0",
    "opik": "^1.8.33",
    "sharp": "^0.34.1",
    "tree-kill": "^1.2.2",
    "ts-jest": "^29.2.5",
    "ts-morph": "^25.0.1",
    "uuid": "^10.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.200.0",
    "@opentelemetry/sdk-node": "^0.200.0",
    "@opentelemetry/sdk-trace-base": "^2.0.0",
    "@types/node": "^22.10.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@opentelemetry/api": ">=1.6.0",
    "@opentelemetry/semantic-conventions": ">=1.22.0"
  }
}
