{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "verbatimModuleSyntax": false,
    "moduleResolution": "Node",
    "outDir": "dist/cjs",
    "declaration": true,
    "sourceMap": true,
    "target": "ES2020"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "**/*.test.ts", 
    "src/tests", 
    "src/**/*.test.ts", 
    "src/**/__mocks__"
  ]
} 